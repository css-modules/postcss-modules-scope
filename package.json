{
  "name": "postcss-modules-scope",
  "version": "2.2.0",
  "description": "A CSS Modules transform to extract export statements from local-scope classes",
  "main": "src/index.js",
  "engines": {
    "node": ">= 10.13.0 || >= 12.13.0 || >= 14"
  },
  "scripts": {
    "prettier": "prettier -l --ignore-path .gitignore . \"!test/test-cases\"",
    "eslint": "eslint --ignore-path .gitignore .",
    "lint": "yarn eslint && yarn prettier",
    "pretest": "yarn lint",
    "test": "mocha",
    "autotest": "chokidar src/index.js test/test.js -c 'yarn test'",
    "cover": "istanbul cover test/index.js",
    "ci": "yarn pretest && yarn cover",
    "prepublishOnly": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/css-modules/postcss-modules-scope.git"
  },
  "keywords": [
    "css-modules",
    "postcss",
    "plugin"
  ],
  "files": [
    "src"
  ],
  "author": "Glen Maddern",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/css-modules/postcss-modules-scope/issues"
  },
  "homepage": "https://github.com/css-modules/postcss-modules-scope",
  "dependencies": {
    "postcss-selector-parser": "^6.0.3"
  },
  "devDependencies": {
    "cssesc": "^3.0.0",
    "chokidar-cli": "^2.1.0",
    "codecov.io": "^0.1.6",
    "coveralls": "^3.1.0",
    "eslint": "^7.9.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "postcss": "^8.0.3",
    "prettier": "^2.1.2"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  }
}
